.navigation
	&__bar
		position absolute
		top 0
		right 0
		padding 20px 0
		display flex
		flex-direction column
		align-items center
		width 90px
		height 100%
		background white
		z-index 3

.menu
	display flex
	justify-content center
	align-items center
	width 100%
	height 100%
	&__wrapper
		position fixed
		top 0
		left 0
		right 0
		bottom 0
		transform-origin right
		transform scaleX(0)
		background gallery
		z-index 2
		transition all .3s ease-in
		&.menu__wrapper--open
			transform scaleX(1)
	&__row
		display flex
		justify-content center
		align-items flex-start
	&__col
		&:last-child
			margin-left 90px
	&__link
		display block
		font-size 40px
		font-weight lighter
		color silver
		transition all .4s
		&:hover
			color darken(silver, 30%)
			cursor pointer
