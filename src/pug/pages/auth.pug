extends template

block css
	//- link(rel="stylesheet" type="text/css" href="assets/i/svg/bg/css/sprite.css")
	link(rel="stylesheet" type="text/css" href="assets/css/style.min.css")

block title
	title Авторизация

block content
	include ../includes/mixins
	.hidden
		include ../../../build/assets/i/svg/inline/sprite.svg

	.auth__page
		.auth__content
			a(href="index.html").auth__logo.logo Мебель
			form.auth__form
				.auth__form-group
					label.auth__label(for="text-field") Ваше имя:
					input(type="text" id="text-field" name="name-field").auth__input
				.auth__form-group
					label.auth__label(for="password-field") Ваш пароль:
					input(type="password" id="password-field" name="password-field").auth__input
				.auth__form-group.auth__form-group--checkbox
					input(type="checkbox" id="check-field" name="check-field").auth__checkbox
					label(for="check-field").auth__label Запомни меня
				.auth__form-group
					input(type="submit").auth__submit


	include ../includes/scripts/ie-scripts

	//- script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")

block scripts
	script(src="assets/libs/jquery-easy-scroll/jquery.easeScroll.js")

